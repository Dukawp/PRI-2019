extends layout
block content
    .w3-container
        header
            h1 Gestão de Alunos
        .w3-card-4
            header.w3-container.w3-teal
                h3 Adicionar Aluno
            .w3-container   
                form.w3-container(action='/alunos' method='POST')
                    label
                        b Numero
                    input.w3-input.w3-border.w3-light-grey(type='text' name='numero')
                    label
                        b Nome
                    input.w3-input.w3-border.w3-light-grey(type='text' name='nome')
                    label
                        b Curso
                    input.w3-input.w3-border.w3-light-grey(type='text' name='curso')
                    input.w3-btn.w3-blue-grey(type='submit' value='Guardar')

            header.w3-container.w3-teal
                h3 Lista de Alunos
            .w3-container
                table.w3-table-all
                    tr
                        th Numero
                        th Nome
                        th Curso
                    each a in lista
                        tr
                            td= a.numero
                            td= a.nome
                            td= a.curso
                            td
                            
                                form.w3-container(action='/alunos/' + a.numero + '/notas' method='GET')
                                    input.w3-btn.w3-blue-grey(type='submit' value='Ver aluno')
                            td
                                button.w3-button.w3-circle.w3-blue-grey(onclick="apagaAluno('" + a.numero + "')") Apagar
    
            footer.w3-container.w3-teal
                address Gerado por Gestão de Alunos App
