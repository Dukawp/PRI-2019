extends layout
block content
    .w3-container      
        h1 Pesquisar filmes por
        table.w3-table-all
            tr
                th
                    form.w3-container(action="/filmes/ano" method="post")
                        label Ano:
                        input.w3-input(type="text", name="year")
                        input.w3-input(type="submit" value="Search")
                th
                    form.w3-container(action="/filmes/genero" method="post")
                        label Genero:
                        input.w3-input(type="text", name="genres")
                        input.w3-input(type="submit" value="Search")  
        h5
            a(href='/filmes')  Voltar a listar todos
                    
    .w3-container
        h1 Lista de filmes
        table.w3-table-all
            tr
                th Titulo
                th Ano
                th Informação 
                th Opções
            each filme in lista
                tr
                    td= filme.title
                    td= filme.year
                    td
                        form.w3-container(action=`/filmes/${filme._id}` method='get')
                                input.w3-btn.w3-border.w3-blue-grey(type='submit' value='Ver Filme')
                    td
                        button.w3-button.w3-circle.w3-blue-grey(onclick="apagarFilme('"+ filme._id +"')") Apagar
    footer.w3-container.w3-teal
        address Gerado por Gestao de Filmes App:
            a(href='/')  Voltar